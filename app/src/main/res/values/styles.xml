<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_09</item>
        <item name="colorPrimaryDark">@color/black_09</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="text_informtion_item" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_my_information</item>
        <item name="android:textColor">@color/gray_21</item>
    </style>

    <style name="text_mine_info" parent="text_informtion_item">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/font_mine_text</item>
        <item name="android:textColor">@color/gray_21</item>
    </style>

    <style name="big_font_basic">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="textSetting" parent="big_font_basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
